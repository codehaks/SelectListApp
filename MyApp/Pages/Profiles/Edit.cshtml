@page
@model MyApp.Pages.Profiles.EditModel
@{
}


<form method="post">
    <input asp-for="UserProfile.Id" hidden />

    <div class="form-group">
        <label asp-for="UserProfile.Name"></label>
        <input class="form-control" asp-for="UserProfile.Name">

    </div>
    <div class="form-group">
        <label asp-for="UserProfile.Country"></label>

        <select asp-for="UserProfile.Country" class="form-control"
                asp-items="@Model.SelectCountry">
            <option>Please select one</option>
        </select>

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
