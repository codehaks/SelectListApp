@page
@model MyApp.Pages.IndexModel
@{
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Country
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Country</td>
                <td>
                    <a asp-page="/profiles/edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }


    </tbody>
</table>